
@{

    var manager = ViewBag.Manager as JIF.CMS.Core.Domain.SysAdmin;

    ViewBag.Title = manager.Account + ", 信息维护";
}


<div class="row">
    <div class="col-lg-5 col-md-8">
        <div class="nav-tabs-custom">
            <ul class="nav nav-tabs">
                <li class="active"><a href="#basicinfo" data-toggle="tab">基本信息</a></li>
                <li><a href="#pwd" data-toggle="tab">修改密码</a></li>
            </ul>
            <div class="tab-content">

                <div class="active tab-pane" id="basicinfo">
                    <form class="form-horizontal" action="/sysmanager/updatebasicinfo/@manager.Id" method="post">
                        @Html.AntiForgeryToken()
                        <div class="box-body">

                            <div class="form-group">
                                <label for="inputAccount" class="col-sm-2 control-label">账 户</label>

                                <div class="col-sm-8">
                                    <b class="form-control" disabled>@manager.Account</b>
                                    @*<input type="text" class="form-control" id="inputAccount" required readonly disabled value="@manager.Account">*@
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="inputEmail" class="col-sm-2 control-label">电子邮箱</label>

                                <div class="col-sm-8">
                                    <input type="email" class="form-control" id="inputEmail" name="Email" placeholder="" required value="@manager.Email">
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="inputPhone" class="col-sm-2 control-label">手机号码</label>

                                <div class="col-sm-8">
                                    <input type="text" class="form-control" id="inputPhone" name="CellPhone" value="@manager.CellPhone">
                                </div>
                            </div>


                            <div class="form-group">
                                <label for="inputEnable" class="col-sm-2 control-label">启用帐号</label>

                                <div class="col-sm-8">
                                    <input type="checkbox" class="checkbox-switch" id="inputEnable" name="Enable" @(manager.Enable ? "checked" : "")>
                                </div>
                            </div>

                        </div>

                        <div class="box-footer">
                            <button type="submit" class="btn btn-success">保 存</button>
                            <a href="/sysmanager" class="btn btn-default pull-right">取 消</a>
                        </div>
                    </form>
                </div>

                <div id="pwd" class="tab-pane">
                    <form class="form-horizontal" action="/sysmanager/updatepwd/@manager.Id" method="post">
                        @Html.AntiForgeryToken()
                        <div class="box-body">
                            <div class="form-group">
                                <label for="inputnewPwd" class="col-sm-2 control-label">新密码</label>

                                <div class="col-sm-8">
                                    <input type="password" class="form-control" id="inputnewPwd" name="newPwd" placeholder="登录密码" required>
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="inputnewPwdRP" class="col-sm-2 control-label">确认密码</label>

                                <div class="col-sm-8">
                                    <input type="password" class="form-control" id="inputnewPwdRP" placeholder="请在输入一次密码, 以确保设置无误" required>
                                </div>
                            </div>

                        </div>

                        <div class="box-footer">
                            <button type="submit" class="btn btn-success">保 存</button>
                            <a href="/sysmanager" class="btn btn-default pull-right">取 消</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

</div>


@section Scripts{
    <script type="text/javascript">
        $(function () {
            var el = document.getElementById('inputEnable');
            var sw = new Switch(el);
        });
    </script>
}

