
@{
    ViewBag.Title = "新增系统用户";
}

<div class="row">
    <div class="col-lg-5 col-md-8">

        <form class="form-horizontal" method="post" action="/sysmanager/add">
            @Html.AntiForgeryToken()
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">
                        <span>基本信息</span>
                    </h3>
                </div>

                <div class="box-body">

                    <div class="form-group">
                        <label for="inputAccount" class="col-sm-2 control-label">账 户</label>

                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="inputAccount" name="Account" placeholder="登录使用账户名" required>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="inputPassword" class="col-sm-2 control-label">密码</label>

                        <div class="col-sm-8">
                            <input type="password" class="form-control" id="inputPassword" name="Password" placeholder="登录密码" required>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="inputPasswordRP" class="col-sm-2 control-label">确认密码</label>

                        <div class="col-sm-8">
                            <input type="password" class="form-control" id="inputPasswordRP" placeholder="请在输入一次密码, 以确保设置无误" required>
                        </div>
                    </div>


                    <div class="form-group">
                        <label for="inputEmail" class="col-sm-2 control-label">电子邮箱</label>

                        <div class="col-sm-8">
                            <input type="email" class="form-control" id="inputEmail" name="Email" placeholder="" required>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="inputPhone" class="col-sm-2 control-label">手机号码</label>

                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="inputPhone" name="CellPhone" placeholder="">
                        </div>
                    </div>


                    <div class="form-group">
                        <label for="inputEnable" class="col-sm-2 control-label">启用帐号</label>

                        <div class="col-sm-8">
                            <input type="checkbox" class="checkbox-switch" id="inputEnable" name="Enable" checked>
                        </div>
                    </div>

                </div>

                <div class="box-footer">
                    <button type="submit" class="btn btn-success">保 存</button>
                    <a href="/sysmanager" class="btn btn-default pull-right">取 消</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts{
    <script type="text/javascript">
        $(function () {
            var el = document.getElementById('inputEnable');
            var sw = new Switch(el);
        });
    </script>
}
