@model ArticleEditViewModel
@{
    var article = Model.Article as JIF.CMS.Core.Domain.Articles.Article;
}

<div class="row">
    <div class="col-md-8">

        <div class="box box-primary">
            <div class="box-body">
                <div class="form-group">
                    <label for="inp-title">标题</label>
                    <input type="text" class="form-control" id="inp-title" placeholder="文章标题" value="@article.Title">
                </div>
                <div class="form-group">
                    <div id="txt-content"><textarea style="display:none;">@article.MarkdownContent</textarea></div>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="box box-primary">
            <div class="box-body">

                <div class="form-group">
                    <label for="inp-pub-date">发布日期</label>
                    <input type="text" class="form-control datepicker" id="inp-pub-date" placeholder="发布日期" value="@article.CreateTime.ToString(JIFConsts.DATETIME_DATE)">
                </div>
                <div class="form-group">
                    <label>所属分类</label>
                    <select class="form-control">
                        @foreach (var cate in Model.Categories)
                        {
                            <option value="@cate.Id">@cate.Name</option>
                        }
                    </select>
                </div>
                <div class="form-group">
                    <input type="checkbox" class="minimal" id="inp-allow-comments" @(article.AllowComments ? "checked" : "")>
                    <label for="inp-allow-comments">允许评论</label>
                </div>

            </div>

            <div class="box-footer">
                <button type="submit" class="btn btn-success">保 存</button>
            </div>
        </div>
    </div>

</div>



@section Scripts{
    @Scripts.Render("~/scripts/editor.md", "~/scripts/bootstrap-datepicker", "~/scripts/page/article")
}

@section Styles{
    @Styles.Render("~/styles/editor.md", "~/styles/bootstrap-datepicker")
}